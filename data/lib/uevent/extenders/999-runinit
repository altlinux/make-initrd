#!/bin/sh

. /.initrd/initenv

[ "${RDMODE-}" != 'live' ] ||
	exit 0

. uevent-sh-functions
. rdshell-sh-functions
. shell-error

rootfs()
{
	if [ ! -e "$rootmnt/$INIT" ]; then
		message "Unable to mount root"
		return 1
	fi
}

mountfs()
{
	local eof fsdev fsdir dummy
	eof=
	while [ -z "$eof" ]; do
		read fsdev fsdir dummy ||
			eof=1

		[ -n "$fsdev" ] ||
			continue

		if [ -n "${ROOTONLY-}" ]; then
			[ "$fsdir" = "$rootmnt" ] ||
				continue
		fi

		if [ ! -d "$fsdir" ]; then
			message "$fsdir: Does not exist"
			return 1
		fi

		if ! mountpoint -q "$fsdir"; then
			message "$fsdir: Not mounted"
			return 1
		fi
	done < /etc/fstab
}

[ -z "${ROOTFS_FOUND-}" ] && console_inactive && mountfs && rootfs ||
	exit 0

echo ROOTFS_FOUND=1 >> /.initrd/initenv
echo 2 > /.initrd/telinit
